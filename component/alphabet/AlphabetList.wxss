.show-alpha {
    width: 150rpx;
    height: 150rpx;
    background-color: rgba(0, 0, 0, 0.4);
    font-size: 50px;
    color: #fff;
    text-align: center;
    line-height: 150rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 20rpx;
}

.bubble {
    position: absolute;
    left: 85rpx;
    width: 34rpx;
    height: 34rpx;
    border-radius: 17rpx;
    background-color: red;
    text-align: center;
    line-height: 34rpx;
    font-size: 25rpx;
    font-weight:600;
    color: white;
    margin-top:-30rpx;
}