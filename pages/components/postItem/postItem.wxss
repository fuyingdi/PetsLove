page{
    height: 100%;
}

.post-box{
    display: flex;
    margin-bottom: 15rpx;
    padding: 20rpx;
    background-color:white;
    flex-direction: column;
}

.avatar-nickname-box{
    display: flex;
    flex-direction: row;
    height: 110rpx;
    align-items: center;        /*纵轴居中*/
}

.avatar{
    margin-left: 20rpx;
    width:90rpx;
    height: 90rpx;
    border-radius: 45rpx;
    background-color:black;
}

.post-nickname{
    font-weight: 1000;
    font-size: 30rpx;
    margin-left: 20rpx;
}

.title{
    font-size: 40rpx;
    padding: 20rpx;
    font-weight: 1000
}

.content{
    display:block;
    max-height: 30%;
    position: relative;
    padding: 0rpx 20rpx;
    margin:15rpx 0rpx;
    font-size: 35rpx;
}

.image-box{
    margin-left: 35rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 50rpx;
}

.image{
    width: 200rpx;
    height: 200rpx;
    margin-left: 6rpx;
    margin-top: 7rpx;
    display: block;
    position: relative;
}

.function-sheet{
    height: 60rpx;
    flex-direction: row-reverse;
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}

.icon{
    width: 50rpx;
    height: 50rpx;
    margin-right: 40rpx;
}

.divLine{
    background: #E0E3DA;
    width: 100%;
    height: 3rpx;
}