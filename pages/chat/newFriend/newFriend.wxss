@import "iconfont.wxss";

page {
    height: 100%;
    width: 100%;
}
.input-box {
    display: block;
    background: white;
    width: 95%;
    height: 100rpx;
    margin-left:5%;
    font-size: 30rpx;
}

.my-identity {
    display: block;
    width: 100%;
    height: 120rpx;
    background: #ECECEC;
    color:#888;
    text-align: center;
    font-size: 30rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #D5D5D5;
    border-top: 1rpx solid #D5D5D5;
}

.item-box{
    display: block;
    width:100%;
}

.scroll-view{
    display: block;
    width:100%;
    height:800rpx;
}

.avatar-info-box{
    display: block;
    height:300rpx;
    background: rgb(238, 238, 238);
    border-bottom: 1rpx solid #DFDFDF;
    padding:30rpx;
    margin-bottom: 5rpx;
}

.add-box{
    position: absolute;
    left:600rpx;
    display: block;
    width:100rpx;
    height:100rpx;
    /* background: red; */
}

.avatar{
    float:left;
    width: 120rpx;
    height:120rpx;
    border-radius: 40rpx;
}


.flex{
    display: flex;
    float: left;
    margin-left:30rpx;
    flex-direction: column;
    font-size:35rpx;
    height:300rpx;
}

.his-nickname{
    font-weight: 600;
    font-size:35rpx;
}

.male{
    color:rgb(39, 83, 230);
}

.female{
    color:rgb(235, 53, 159);
}

.location{
    font-size:30rpx;
}

.signature{
    display: block;
    font-size:30rpx;
    margin-top:30rpx;
    width:500rpx;
    height:120rpx;
    padding:10rpx;
    background: #FFF;
    border-radius: 10rpx;
}


.welcome{
    width:100%;
    height:1000rpx;
    line-height: 1000rpx;
    text-align: center;
    font-size:30rpx;
    color:#888;
}