<view class="avatar-image-box">
    <image src="{{userInfo.avatar}}" class="avatar-image"/>
    <text class="nickname">{{userInfo.nickname}}</text>
</view>

<form >

<view class="item">
  <text>昵称</text>
  <input id="nickname" name="nickname" value="{{userInfo.nickname}}" bindblur="bindblurNickname"/>
</view>

<view class="item">
  <text>性别</text>
  <picker mode="selector" style="display:inline-block" range="{{genderrange}}" bindchange="bindchangegender">
    {{genderrange[userInfo.gender]}}
  </picker>
</view>

<view class="item">
  <text>邮箱</text>
  <input id="email" name="email" value="{{userInfo.email}}" bindblur="bindblurEmail"/>
</view>

<view class="item">
  <text>个人签名</text>
  <input id="signature" name="signature" value='{{userInfo.signature}}' bindblur="bindblurSignature"/>
</view>

<view class="item">
  <text>生日</text>
  <picker mode="date" value="{{userInfo.birthday}}}" style="display:inline-block" bindchange="bindchangeBirthday">
      {{userInfo.birthday}}
  </picker>
</view>

<view class="item">
  <text>城市</text>
  <picker mode="region" value="region" style="display:inline-block" bindchange="bindchangeRegion">
      {{region[0]}},{{region[1]}},{{region[2]}}
  </picker>
</view>

</form>
