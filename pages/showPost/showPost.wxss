.input-section {
    /* position: absolute;
    display: flex; */
    position: fixed;
    align-items: center;
    height: 110rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 500;
    background: #fff;
}
 
.input_input {
    background: #fff;
    z-index: 500;
    width: 580rpx;
    height: 110rpx;
    padding-left: 35rpx;
 
}
 
.send_btn {
    width: 110rpx;
    height: 66rpx;
    position: absolute;
    top: 24rpx;
    right: 30rpx;
    background: rgb(47, 80, 19);
    z-index: 550;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
 
.send_btn_text {
    display: flex;
    font-size: 32rpx;
    font-family: 'PingFang';
    color: #fff;
    z-index: 560;
}

.input-box{
    position: fixed;
    flex-direction: row;
    align-items: center;
    height: 100rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 500;
    box-shadow: 0px 0px 5px #ededed;
    background-color: white;
    display: flex;
}   

.input-field{
    width: 75%;
    height: 80rpx;
    border-radius: 25rpx;
    margin:10rpx 0rpx 10rpx 15rpx;
    padding:0rpx 10rpx;
    background-color: #ededed;
}


